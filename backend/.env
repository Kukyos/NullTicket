# Environment Configuration Template
# Copy this to .env and fill in your actual values

# ============================================================================
# CORE SETTINGS
# ============================================================================
DEBUG=False
DATABASE_URL=sqlite:///./data/tickets.db

# ============================================================================
# SECURITY
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ============================================================================
# AI SERVICES (REQUIRED for classification)
# ============================================================================
GROQ_API_KEY=your_groq_api_key_here
# Get your free key at: https://console.groq.com

# Optional: Gemini API as backup
GEMINI_API_KEY=

# ============================================================================
# EMAIL INGESTION
# ============================================================================
EMAIL_ENABLED=True
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_USER=support@yourcompany.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_CHECK_INTERVAL=60

# SMTP for sending notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=support@yourcompany.com
SMTP_PASSWORD=your_app_password_here

# ============================================================================
# SMS NOTIFICATIONS (Optional - Twilio)
# ============================================================================
SMS_ENABLED=False
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================================
# EXTERNAL SYSTEM INTEGRATIONS
# ============================================================================

# GLPI Integration
GLPI_ENABLED=False
GLPI_API_URL=https://your-glpi-instance.com/apirest.php
GLPI_API_KEY=
GLPI_APP_TOKEN=
GLPI_SYNC_INTERVAL=300

# SAP Solman Integration
SOLMAN_ENABLED=False
SOLMAN_API_URL=https://your-solman-instance.com/api
SOLMAN_USERNAME=
SOLMAN_PASSWORD=
SOLMAN_SYNC_INTERVAL=300

# ============================================================================
# NULLCHAT INTEGRATION
# ============================================================================
NULLCHAT_API_URL=http://localhost:8000

# ============================================================================
# FILE UPLOADS
# ============================================================================
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE_MB=10

# ============================================================================
# BACKGROUND TASKS (Celery + Redis)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
